<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of Module BackgroundSimulatorCSM -->


<BackgroundSimulatorCSM
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation='@SCHEMALOCATION@/BackgroundSimulatorCSM.xsd'>
    <!-- Tell the module to use one average background per pixel per GTU or read from file -->
    <ReadFromFile> 0 </ReadFromFile>
    <Path> </Path>

    <!-- Mean constant background value for all pixel 1 is average value estimated by EUSO-TA data-->

    <!-- Define if detector is SPB1, because this cause is different due to rotation -->
    <IsSPB1> 0 </IsSPB1>
    <!-- TiltDependent will change background value depending on tilt angle of the pixel. BaseValue is the value when pointing straigh down, every angle other than this will have a larger background value. Tilt is the angle of tilt, defined as the same way it is in EventGenerator-->
    <NonUniform> 0 </NonUniform>
    <TiltDependent> 0 </TiltDependent>
    <BaseValue> 0.5 </BaseValue>
    <MakeBlobs> 0.0 </MakeBlobs>
    <VarriedBackground> 0 </VarriedBackground>


</BackgroundSimulatorCSM>
