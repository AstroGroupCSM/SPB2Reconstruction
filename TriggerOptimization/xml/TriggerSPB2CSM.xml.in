<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of Module NewSPB2TriggerModule -->

<TriggerSPB2CSM xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:noNamespaceSchemaLocation='@SCHEMALOCATION@/TriggerSPB2CSM.xsd'>

  <nHot> 3 </nHot> <!--Number of cellss that need to be hot-->
  <nActive> 5 </nActive><!--Number of cellss that need to be active-->
  <nSigma>5.5 </nSigma> <!--How much over threshold a cell needs to be-->
  <LengthTrigger> 10 </LengthTrigger>
  
    <!--More technical parameters-->
  <Verbosity> 1 </Verbosity>
  <SignalOnly> 1 </SignalOnly>
  <ReadThresholdsFromFile> 1 </ReadThresholdsFromFile>
  <ThresholdFile>@SCHEMALOCATION@/ThresholdFiles/SPB2ThresholdFile.dat  </ThresholdFile>
  <LengthThreshold> 16384 </LengthThreshold>

</TriggerSPB2CSM>
